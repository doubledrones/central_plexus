#!/bin/sh -ev

VERSION="3.5.0"

echo "Installing: 1Password"

if [ ! -d ~/Library/Caches/central_plexus ]; then
  mkdir -p ~/Library/Caches/central_plexus
fi

cd ~/Library/Caches/central_plexus
if [ ! -f 1Password-$VERSION.zip.ok ]; then
  curl http://cdn.agile.ws/aws/dmg/1PW3/English/1Password-3.5.0.zip -o 1Password-$VERSION.zip
  unzip -t 1Password-$VERSION.zip
fi
touch 1Password-$VERSION.zip.ok
if [ ! -d ~/Applications/ ]; then
  mkdir -p ~/Applications/
fi
unzip -uo 1Password-$VERSION.zip -d ~/Applications/
