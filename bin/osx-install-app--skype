#!/bin/sh -ev

VERSION="2.8.0.851"

echo "Installing: Skype"

if [ ! -d ~/Library/Caches/central_plexus ]; then
  mkdir -p ~/Library/Caches/central_plexus
fi

cd ~/Library/Caches/central_plexus
if [ ! -f Skype_$VERSION.dmg.ok ]; then
  curl http://download.skype.com/macosx/Skype_$VERSION.dmg -o Skype_$VERSION.dmg
  hdiutil verify Skype_$VERSION.dmg
  touch Skype_$VERSION.dmg.ok
fi
if [ ! -d ~/Applications/ ]; then
  mkdir -p ~/Applications/
fi
open Skype_$VERSION.dmg
sleep 1
rsync -a /Volumes/Skype/Skype.app/ ~/Applications/Skype.app/
sleep 1
diskutil umount /Volumes/Skype/
