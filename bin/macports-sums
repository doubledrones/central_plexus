#!/bin/sh

for FILE in $@
do
  MD5=`md5 $FILE | cut -f 2 -d = | cut -b 2-`
  SHA1=`sha1sum $FILE | cut -f 1 -d ' '`
  RMD160=`ripemd160sum $FILE | cut -f 1 -d ' '`

  echo "checksums           md5     $MD5 \\"
  echo "                    sha1    $SHA1 \\"
  echo "                    rmd160  $RMD160"
done
