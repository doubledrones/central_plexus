#!/bin/sh -ev

VERSION="0.8"

echo "Installing: Mozilla Prism"

if [ ! -d ~/Library/Caches/central_plexus ]; then
  mkdir -p ~/Library/Caches/central_plexus
fi

cd ~/Library/Caches/central_plexus
if [ ! -f prism-$VERSION-mac.dmg.ok ]; then
  curl http://people.mozilla.com/~mfinkle/prism/prism-$VERSION-mac.dmg -o prism-$VERSION-mac.dmg
  hdiutil verify prism-$VERSION-mac.dmg
  touch prism-$VERSION-mac.dmg.ok
fi
if [ ! -d ~/Applications/ ]; then
  mkdir -p ~/Applications/
fi
hdiutil attach -noautoopen -noidme prism-$VERSION-mac.dmg
sleep 1
rsync -a /Volumes/prism/Prism.app/ ~/Applications/Prism.app/
sleep 1
diskutil umount /Volumes/prism/

