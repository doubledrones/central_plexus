#!/bin/sh -e

case "`osx-system-language`" in
  "en")
    exec osascript <<EOF

tell application "System Preferences"
activate
set current pane to pane "com.apple.preference.keyboard"
end tell

tell application "System Events"
tell application process "System Preferences"
get properties

click button "Modifier Keys…" of tab group 1 of window "Keyboard"
tell sheet 1 of window "Keyboard"
click pop up button 4
click menu item "No Action" of menu 1 of pop up button 4
delay 3

click button "OK"
end tell
end tell
end tell

tell application "System Preferences" to quit

EOF
    ;;
  "pl")
    exec osascript <<EOF

tell application "System Preferences"
activate
set current pane to pane "com.apple.preference.keyboard"
end tell

tell application "System Events"
tell application process "System Preferences"
get properties

click button "Klawisze modyfikujące…" of tab group 1 of window "Klawiatura"
tell sheet 1 of window "Klawiatura"
click pop up button 4
click menu item "Brak czynności" of menu 1 of pop up button 4
delay 3

click button "OK"
end tell
end tell
end tell

tell application "System Preferences" to quit

EOF
    ;;
  *)
    echo "Unknown language"
    exit 1
    ;;
esac
