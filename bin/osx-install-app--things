#!/bin/sh -ev

VERSION="1.4.3"

echo "Installing: Things"

if [ ! -d ~/Library/Caches/central_plexus ]; then
  mkdir -p ~/Library/Caches/central_plexus
fi

cd ~/Library/Caches/central_plexus
if [ ! -f 1Password-$VERSION.zip.ok ]; then
  curl http://culturedcode.cachefly.net/things/Things_$VERSION.zip -o Things_$VERSION.zip
  unzip -t Things_$VERSION.zip
fi
touch Things_$VERSION.zip.ok
if [ ! -d ~/Applications/ ]; then
  mkdir -p ~/Applications/
fi
unzip -uo Things_$VERSION.zip -d ~/Applications/
