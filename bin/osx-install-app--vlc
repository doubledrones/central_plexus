#!/bin/sh -ev

VERSION="1.1.5"

echo "Installing: VLC"

if [ ! -d ~/Library/Caches/central_plexus ]; then
  mkdir -p ~/Library/Caches/central_plexus
fi

cd ~/Library/Caches/central_plexus
if [ ! -f vlc-$VERSION-intel64.dmg.ok ]; then
  curl http://netcologne.dl.sourceforge.net/project/vlc/$VERSION/macosx/vlc-$VERSION-intel64.dmg -o vlc-$VERSION-intel64.dmg
  hdiutil verify vlc-$VERSION-intel64.dmg
  touch vlc-$VERSION-intel64.dmg.ok
fi
if [ ! -d ~/Applications/ ]; then
  mkdir -p ~/Applications/
fi
open vlc-$VERSION-intel64.dmg
sleep 1
rsync -a /Volumes/vlc-1.1.5/VLC.app/ ~/Applications/VLC.app/
sleep 1
diskutil umount /Volumes/vlc-1.1.5/
